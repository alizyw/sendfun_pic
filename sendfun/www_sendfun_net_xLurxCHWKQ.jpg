<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <div class="banner">
    <img id="randimg">
  </div>


  <video
    src="https://new-service.biliapi.net/picture/chatres/102d1b48515346ec8e9fb543b54ec454/msg/20210608/bilibili2021夏_压制版_1623125135910.zip"
    autoplay controls muted></video>


  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html,
    body {
      width: 100%;
      height: 100%;
    }

    .banner {
      position: relative;
      width: 100%;
      height: 180px;
      overflow: hidden;
    }

    .banner img {
      position: absolute;
      top: 0;
      left: 50%;
      height: 100%;
      display: block;
      transform: translate(-50%, 0);
    }
  </style>

  <script>
    var picList = [
      'https://i0.hdslb.com/bfs/album/198baa642414cb79b6338faf2c6bfd6f1c5f5b72.png',
      'https://i0.hdslb.com/bfs/album/784eb0b42070bb22a50dfae9baca3c09c79afb96.png',
      'https://i0.hdslb.com/bfs/album/7245fc21ab65223fb1910d05c107205f837a5b34.png',
      'https://i0.hdslb.com/bfs/album/988da1865b723ecfb1592fcd47e1d3952337c8ba.png',
      'https://i0.hdslb.com/bfs/album/93e60c73b1174a43d90ce72daaf0cb52a1a4a3fc.png',
      'https://i0.hdslb.com/bfs/album/e131d9d7b4cfa1533736f809ef5729e6d47f0f5e.png',
      'https://i0.hdslb.com/bfs/album/c835b1e3895a1e77e9c4aa3ed052cfb5e7fd64bb.png',
      'https://i0.hdslb.com/bfs/album/8a8f1e93b210be02a43fa4d39a37faf9b57287fd.png',
      'https://i0.hdslb.com/bfs/album/b6e2cb6e4fb30e515928511c4b28e40d0eab74c3.png',
    ];

    var hour = new Date().getHours();
    var imgDom = document.getElementById('randimg');

    if (hour >= 1 && hour < 6) {
      imgDom.src = picList[8];
    } else if (hour >= 6 && hour < 9) {
      imgDom.src = picList[1];
    } else if (hour >= 9 && hour < 16) {
      // 白天
      imgDom.src = picList[0];
    } else if (hour >= 17 && hour < 19) {
      // 傍晚
      imgDom.src = picList[3];
    } else if (hour >= 19 && hour < 21) {
      imgDom.src = picList[7];
    } else if (hour >= 21 && hour <= 24) {
      imgDom.src = picList[6];
    }
  </script>
</body>

</html>